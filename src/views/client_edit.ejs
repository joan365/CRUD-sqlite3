<%- include( 'partials/_header'); -%>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class=" card-body">
                    <h5>Modificar client</h5>

                    <form action="/update/<%= data.id %>" method="POST">
                        <div class="form-group mb-2">
                            <input type="text" name="name" value="<%= data.name %>" placeholder="Nom usuari" class="form-control">
                        </div>
                        <div class="form-group  mb-2">
                            <input type="text" name="address" value="<%= data.address %>" placeholder="Adreça" class="form-control">
                        </div>
                        <div class="form-group  mb-2">
                            <input type="text" name="phone" value="<%= data.phone %>" placeholder="Telèfon" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar client número <%= data.id %></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


